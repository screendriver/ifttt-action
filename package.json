{
	"name": "ifttt-action",
	"version": "1.0.0",
	"description": "GitHub action that triggers an IFTTT webhooks event",
	"main": "target/src/index.js",
	"author": "Christian Rackerseder <git@echooff.de>",
	"license": "MIT",
	"scripts": {
		"compile": "tsc --build",
		"build": "ncc build target/src/index.js --out target/dist/ --minify",
		"lint": "eslint src test --ext '.ts,.tsx'",
		"copy:paste:detector": "jscpd src test",
		"test:unit": "ava",
		"test:unit:coverage": "c8 npm run test:unit"
	},
	"dependencies": {
		"@actions/core": "1.11.1",
		"got": "11.8.6",
		"tslib": "2.8.1"
	},
	"devDependencies": {
		"@ava/typescript": "5.0.0",
		"@jscpd/finder": "4.0.1",
		"@jscpd/html-reporter": "4.0.1",
		"@types/got": "9.6.12",
		"@types/sinon": "17.0.3",
		"@typescript-eslint/eslint-plugin": "8.19.1",
		"@typescript-eslint/parser": "8.19.1",
		"@vercel/ncc": "0.38.3",
		"ava": "6.2.0",
		"c8": "10.1.3",
		"esbuild": "0.24.2",
		"eslint": "8.57.1",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-ava": "14.0.0",
		"eslint-plugin-prettier": "5.2.1",
		"jscpd": "4.0.5",
		"prettier": "3.4.2",
		"sinon": "19.0.2",
		"tsx": "4.19.2",
		"typescript": "5.7.2"
	}
}
