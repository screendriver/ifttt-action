{
  "name": "ifttt-action",
  "version": "1.0.0",
  "description": "GitHub action that triggers an IFTTT webhooks event",
  "main": "target/src/index.js",
  "author": "Christian Rackerseder <git@echooff.de>",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --build",
    "lint": "tslint -c tslint.json 'src/**/*.ts' 'test/**/*.ts'",
    "copy:paste:detector": "jscpd src test",
    "prettier:check": "prettier --check 'src/**/*.ts?(x)' 'test/**/*.ts?(x)'",
    "test:unit": "tape -r source-map-support/register 'target/test/**/*.js' | tap-nirvana",
    "test:unit:coverage": "nyc tape -r source-map-support/register 'target/test/**/*.js' | tap-nyc"
  },
  "dependencies": {
    "@actions/core": "1.0.0",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@types/tape": "4.2.33",
    "jscpd": "2.0.15",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "source-map-support": "0.5.13",
    "tap-nirvana": "1.1.0",
    "tap-nyc": "1.0.3",
    "tape": "4.11.0",
    "tslint": "5.18.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.5.3"
  }
}
