{
	"name": "ifttt-action",
	"version": "1.0.0",
	"description": "GitHub action that triggers an IFTTT webhooks event",
	"main": "target/src/index.js",
	"author": "Christian Rackerseder <git@echooff.de>",
	"license": "MIT",
	"scripts": {
		"compile": "tsc --build",
		"build": "ncc build target/src/index.js --out target/dist/ --minify",
		"lint": "eslint src test --ext '.ts,.tsx'",
		"copy:paste:detector": "jscpd src test",
		"test:unit": "ava",
		"test:unit:coverage": "c8 npm run test:unit"
	},
	"dependencies": {
		"@actions/core": "1.10.1",
		"got": "11.8.6",
		"tslib": "2.6.3"
	},
	"devDependencies": {
		"@ava/typescript": "4.1.0",
		"@types/got": "9.6.12",
		"@types/sinon": "17.0.3",
		"@typescript-eslint/eslint-plugin": "6.21.0",
		"@typescript-eslint/parser": "6.21.0",
		"@vercel/ncc": "0.38.1",
		"ava": "6.1.3",
		"c8": "9.1.0",
		"esbuild": "0.21.4",
		"eslint": "8.57.0",
		"eslint-config-prettier": "9.1.0",
		"eslint-plugin-ava": "14.0.0",
		"eslint-plugin-prettier": "5.1.3",
		"jscpd": "3.5.10",
		"prettier": "3.3.1",
		"sinon": "17.0.2",
		"tsx": "4.15.0",
		"typescript": "5.4.5"
	}
}
