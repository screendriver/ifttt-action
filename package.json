{
  "name": "ifttt-action",
  "version": "1.0.0",
  "description": "GitHub action that triggers an IFTTT webhooks event",
  "main": "target/src/index.js",
  "author": "Christian Rackerseder <git@echooff.de>",
  "license": "MIT",
  "scripts": {
    "compile": "tsc --build",
    "build": "ncc build target/src/index.js --out target/dist/ --minify",
    "lint": "eslint src test --ext '.ts,.tsx'",
    "copy:paste:detector": "jscpd src test",
    "test:unit": "TS_NODE_PROJECT=tsconfig.base.json mocha",
    "test:unit:coverage": "TS_NODE_PROJECT=tsconfig.base.json c8 mocha"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "got": "9.6.0",
    "tslib": "2.1.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/commit-analyzer": "8.0.1",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.2.1",
    "@semantic-release/npm": "7.1.0",
    "@semantic-release/release-notes-generator": "9.0.2",
    "@types/chai": "4.2.16",
    "@types/got": "9.6.11",
    "@types/mocha": "8.2.2",
    "@types/sinon": "9.0.11",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "@vercel/ncc": "0.28.2",
    "c8": "7.7.1",
    "chai": "4.3.4",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-mocha": "8.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "jscpd": "3.3.25",
    "mocha": "8.3.2",
    "prettier": "2.2.1",
    "semantic-release": "17.4.2",
    "sinon": "10.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  }
}
